<!DOCTYPE html>
<html>
  <head>
    <title>Code Fellows Contact Manager</title>

    <!-- Bring In jQuery -->
    <script src="/bower_components/jquery/jquery.js"></script>
    <script src="/bower_components/parsleyjs/dist/parsley-standalone.min.js"></script>


    <!-- Bring In Bootstrap -->

    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap-theme.min.css">
    
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Application Styles and Scripts -->
    <link rel="stylesheet" href="/jsbootcamp.css">
  </head>

  <body>
    <div>
      <form method="POST" class="form-horizontal" role="form" data-validate="parsley">
        {{#with contact}}
          <div class="form-group">
            <label for="firstName">First Name</label>
            <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name" value="{{firstName}}" data-required="true"/>
          </div>

          <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last Name" value="{{lastName}}" data-required="true"/>
          </div>

          <div class="form-group">
            <label for="nickname">Nickname</label>
            <input type="text" class="form-control" id="nickname" name="nickname" placeholder="Nickname" value="{{nickname}}"/>
          </div>

          <div class="form-group">
            <label for="company">Company</label>
            <input type="text" class="form-control" id="company" name="company" placeholder="Company" value="{{company}}"/>
          </div>

          <div class="form-group">
            <label for="email">Email Addr</label>
            <input type="text" class="form-control" id="email" name="email" placeholder="Email Addrress"  data-type="email" value="{{email}}"/>
          </div>
        {{/with}}

        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </body>
</html>
