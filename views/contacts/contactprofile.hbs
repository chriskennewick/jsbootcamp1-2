<!DOCTYPE html>
<html>
  <head>
    <title>Code Fellows Contact Manager</title>

    <!-- Bring In jQuery -->
    <script src="/bower_components/jquery/jquery.js"></script>
    <script src="/bower_components/parsleyjs/dist/parsley-standalone.min.js"></script>


    <!-- Bring In Bootstrap -->

    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap-theme.min.css">
    
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Application Styles and Scripts -->
    <script src="/bower_components/moment/min/moment.min.js"></script>
    <link rel="stylesheet" href="/jsbootcamp.css">

  </head>

  <body>
    <div id="profile-page">  
      <div id="contacts-nav">
        <a href="/contacts">Contacts</a>
      </div>
      {{#with contact}}
        <div>
        <img id="profile-pic" {{#if profilePicture}}
        src={{profilePicture}}
        {{else}}
        src="/images/contact_default.png"
        {{/if}}/>
        <h2>{{firstName}} {{lastName}} ({{nickname}})</h2>
        </div>
        <div>
        <table id="profile-info-table">
          <tbody>
          
            <tr>
              <th>Age</th>
            {{#if dateOfBirth}}
              <td id="age">

                <script>
                $(document).ready(function() {
                  var age = moment("{{dateOfBirth}}", "YYYY-MM-DD").month(0).from(moment().month(0),true);
                  $('#age').text(age);
                });
                </script>
              </td>  
            {{else}}
              <td>Unknown</td>
            {{/if}}
            </tr>
          {{#if company}}
            <tr>
              <th>Company</th>
              <td>{{company}}</td>
            </tr>
          {{/if}}  
            <tr>
              <th>Email</th>
              <td>{{email}}</td>
            </tr>
          </tbody>
        </table>
        </div>
        
      {{/with}}

    </div>
  </body>
</html>
