<!DOCTYPE html>
<html>
  <head>
    <title>Code Fellows Contact Manager</title>

    <!-- Bring In jQuery -->
    <script src="/bower_components/jquery/jquery.js"></script>
    <script src="/bower_components/parsleyjs/dist/parsley-standalone.min.js"></script>


    <!-- Bring In Bootstrap -->

    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap-theme.min.css">
    
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Application Styles and Scripts -->
    <link rel="stylesheet" href="/jsbootcamp.css">
  </head>

  <body>
    <div id="profile-page">  
      <div id="contacts-nav">
        <a href="/contacts">Contacts</a>
      </div>
      {{#with contact}}
        <div>
        <img id="profile-pic" src="/images/contact_default.png"/>
        <h2>{{firstName}} {{lastName}} ({{nickname}})</h2>
        </div>
        <div>
        <table id="profile-info-table">
          <tbody>

          {{#if company}}
            <tr>
              <th>Company</th>
              <td>{{company}}</td>
            </tr>
          {{/if}}  
            <tr>
              <th>Email</th>
              <td>{{email}}</td>
            </tr>
          </tbody>
        </table>
        </div>
        
      {{/with}}

    </div>
  </body>
</html>
